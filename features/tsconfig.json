{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["./**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist", "../apps/**/*"]
}
