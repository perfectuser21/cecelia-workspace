{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "departments"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "departments": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/department"
      }
    }
  },
  "definitions": {
    "department": {
      "type": "object",
      "required": ["id", "name", "workers"],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "workers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/worker"
          }
        }
      }
    },
    "worker": {
      "type": "object",
      "required": ["id", "name", "role", "department", "skills", "n8n_workflows"],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "department": {
          "type": "string"
        },
        "skills": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "n8n_workflows": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["active", "inactive"]
        }
      }
    }
  }
}
