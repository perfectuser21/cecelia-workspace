{
  "type": "frontend",
  "version": "1.0.0",
  "checks": [
    {
      "name": "existence",
      "required": true,
      "description": "产出文件存在"
    },
    {
      "name": "structure",
      "required": true,
      "description": "目录结构正确"
    },
    {
      "name": "isolation",
      "required": true,
      "description": "模块独立性 - 不破坏现有代码"
    },
    {
      "name": "build",
      "required": true,
      "description": "构建成功"
    },
    {
      "name": "linting",
      "required": true,
      "tool": "eslint",
      "description": "ESLint 检查通过"
    },
    {
      "name": "typescript",
      "required": true,
      "description": "TypeScript 编译通过"
    },
    {
      "name": "test",
      "required": false,
      "tool": "jest",
      "description": "测试通过（可选）"
    },
    {
      "name": "git",
      "required": true,
      "description": "无合并冲突"
    }
  ],
  "project_path": "apps/dashboard/frontend",
  "build_command": "pnpm build",
  "test_command": "pnpm test",
  "lint_command": "pnpm lint"
}
