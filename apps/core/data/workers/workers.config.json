          "n8nKeywords": ["爬取", "scrape", "采集", "数据爬取", "抖音", "小红书", "微博", "知乎", "快手", "公众号", "视频号", "头条", "分析", "analytics", "统计"],
          "gradient": {
            "from": "from-amber-500",
            "to": "to-orange-500"
          }
        }
      ]
    },
    {
      "id": "ops",
      "name": "运维部",
      "level": "execution",
      "icon": "Wrench",
      "managedBy": "nobel",
      "description": "执行层，负责系统运维，由 Nobel 调度",
      "workers": [
        {
          "id": "xiaowei",
          "name": "小维",
          "alias": "Wei",
          "icon": "Server",
