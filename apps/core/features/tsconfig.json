{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../zenithjoy-autopilot/apps/dashboard/frontend/src/*"],
      "react": ["../../zenithjoy-autopilot/apps/dashboard/frontend/node_modules/@types/react"],
      "react-dom": ["../../zenithjoy-autopilot/apps/dashboard/frontend/node_modules/@types/react-dom"],
      "lucide-react": ["../../zenithjoy-autopilot/apps/dashboard/frontend/node_modules/lucide-react"]
    },
    "typeRoots": [
      "../../zenithjoy-autopilot/apps/dashboard/frontend/node_modules/@types",
      "../../zenithjoy-autopilot/apps/dashboard/frontend/node_modules"
    ]
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules"]
}
