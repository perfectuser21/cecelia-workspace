{
  "name": "@cecelia/core",
  "version": "1.2.2",
  "description": "Cecelia Core: Multi-model AI executor + Dashboard task visualization API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cecilia": "./bin/cecilia"
  },
  "scripts": {
    "build": "tsc && npm run copy-js",
    "copy-js": "cp -r src/task-system dist/ && cp -r src/okr dist/",
    "dev": "tsx watch src/dashboard/server.ts",
    "start": "node dist/dashboard/server.js",
    "cecilia": "tsx src/cecilia/cli.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "ai",
    "code-executor",
    "claude",
    "n8n"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "commander": "^12.1.0",
    "compression": "^1.8.1",
    "dotenv": "^17.2.3",
    "express": "^4.22.1",
    "http-proxy-middleware": "^3.0.0",
    "lucide-react": "^0.564.0",
    "pg": "^8.17.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "serve-static": "^2.2.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/compression": "^1.8.1",
    "@types/express": "^4.17.25",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/serve-static": "^1.15.10",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.39.2",
    "happy-dom": "^20.6.1",
    "supertest": "^7.2.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
