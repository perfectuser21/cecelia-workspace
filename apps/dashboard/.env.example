# n8n Configuration
N8N_BASE_URL=https://n8n.yourdomain.com
N8N_API_KEY=YOUR_N8N_API_KEY

# Collector API
COLLECTOR_API_BASE=https://api.yourdomain.com
COLLECTOR_API_KEY=YOUR_COLLECTOR_API_KEY

# Database
DATABASE_URL=postgres://user:pass@localhost:5432/collector

# Notion (optional: if Collector writes to Notion)
NOTION_TOKEN=secret_xxx
NOTION_DAILY_DB_ID=xxxxxxxx

# Team notify (webhook/internal bot)
TEAM_NOTIFY_WEBHOOK=https://your-team-webhook-url

# Feishu Notification
# 发布任务完成后会自动发送通知到飞书群
# 在飞书群中创建机器人，获取 Webhook 地址后填入
FEISHU_WEBHOOK_URL=

# Worker Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# Session Storage
SESSION_STORAGE_PATH=/app/sessions
