# Server Configuration
PORT=3000
NODE_ENV=development
COLLECTOR_API_KEY=your-secret-api-key-change-me

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=n8n_social_metrics
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Workers Configuration
WORKERS_HEADLESS=true
WORKERS_TIMEOUT=120000
WORKERS_MAX_CONCURRENT=5

# Storage Paths
SESSION_STORAGE_PATH=/app/data/sessions
SCREENSHOT_PATH=/app/data/screenshots

# Notifications
FEISHU_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/your-webhook-key
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Notion Integration
NOTION_API_KEY=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_DATABASE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_TASKS_DB_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=*
